<h1><%= @channel.title %> Podcast</h1>

Atom feed:

<% if @podcast.source_type == 'playlist' %>
  <%= link_to 'Audio podcast', playlist_url(@podcast.origin_id, format: :atom) %>
  <%= link_to 'Video podcast', playlist_url(@podcast.origin_id, type: :video, format: :atom) %>
<% else %>
  <%= link_to 'Audio podcast', channel_url(@podcast.origin_id, format: :atom) %>
  <%= link_to 'Video podcast', channel_url(@podcast.origin_id, type: :video, format: :atom) %>
<% end %>

<br />
<br />

<div class='episodes'>
  <% @videos.each do |episode| %>
    <div class='episode'>
      <%= episode.title %>
      <span class='episode__link'><%= episode.mime_type %> <%= link_to number_to_human_size(episode.size), episode.url %></span>
    </div>
  <% end %>
</div>
